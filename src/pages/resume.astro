---
import DefaultLayout from "@/layouts/default-layout.astro";
import { resume } from "@/lib/data/resume";
import Experience from "@/components/resume/experience.astro";

const { experiences } = resume;
---

<DefaultLayout headProps={{ title: "Resume - Robert Tabacaru" }}>
  <div class="mb-8">
    <h1>Resume</h1>
  </div>
  <section>
    <h2 class="mb-6">Experience</h2>
    <div class="flex flex-col gap-8">
      {experiences.map((experience) => <Experience experience={experience} />)}
    </div>
  </section>
</DefaultLayout>
