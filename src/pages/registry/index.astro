---
import DefaultLayout from "@/layouts/default-layout.astro";
import RegistryItem from "@/components/registry/registry-item.astro";
import registryData from "@/lib/registry/registry.json";

const registryItems = registryData.items;
---

<DefaultLayout headProps={{ title: "Registry - Robert Tabacaru" }}>
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold mb-4">Registry</h1>
      <p class="text-muted-foreground">
        Reusable TypeScript utilities for your projects
      </p>
    </div>

    <div class="space-y-6">
      {registryItems.map((item) => <RegistryItem item={item} />)}
    </div>
  </div>
</DefaultLayout>
